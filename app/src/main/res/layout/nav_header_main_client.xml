<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/darkGreen"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/client_NavImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/baseline_account_circle_black_48" />

    <TextView
        android:id="@+id/client_NavTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Mahmoud Abdel Moaz"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <LinearLayout
        android:id="@+id/but_rewards"
        android:layout_marginTop="5dp"
android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:background="@drawable/rewardshape"
        android:layout_height="25dp">

        <TextView
            android:drawableLeft="@drawable/baseline_card_giftcard_black_18"
            android:drawablePadding="5dp"
            android:id="@+id/textView"
            android:textColor="@color/black"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rewardes: 0 points" />
    </LinearLayout>


</LinearLayout>
