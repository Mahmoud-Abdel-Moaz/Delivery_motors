<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/pobupbackground"
    android:padding="10dp"
    tools:context=".Client.Pop_CaptainActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cap_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_account_circle_black_48" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capten name"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="24sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        style="?android:attr/ratingBarStyleIndicator"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/but_sendOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Request"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#ffff"
            android:background="@drawable/buttonradshape"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/but_cansel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:background="@drawable/buttonradshapered"
            android:textAllCaps="false"
            android:textSize="18sp"
            />

    </LinearLayout>




</LinearLayout>